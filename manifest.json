{
  "manifest_version": 2,
  "name": "PIT Abuse Reporter",
  "version": "1.3",
  "description": "Quickly report abuse for unsolicited emails",

  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "pit-abuse-reporter@puntoit.cz",
      "strict_min_version": "115.0"
    }
  },
  
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "permissions": [
    "messagesRead",
    "accountsRead",
    "compose",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "message_display_action": {
    "default_title": "Abuse",
    "default_popup": "popup.html",
    "default_icon": "icon32.png"
  }
  
  
}
